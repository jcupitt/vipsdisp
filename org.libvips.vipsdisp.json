        "/share/RELEASE.txt",
        "/share/cmake",
        "/bin/a*",
        "/bin/b*",
        "/bin/c*",
        "/bin/d*",
        "/bin/e*",
        "/bin/f*",
        "/bin/g*",
        "/bin/h*",
