            "name" : "highway",
            "builddir" : true,
            "buildsystem" : "cmake-ninja",
            "build-options" : {
                "config-opts" : [
                    "-DCMAKE_INSTALL_LIBDIR=lib",
                    "-DBUILD_TESTING=OFF",
                    "-DHWY_ENABLE_CONTRIB=OFF",
                    "-DHWY_ENABLE_EXAMPLES=OFF",
                    "-DHWY_ENABLE_TESTS=OFF"
                ]
            },
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/google/highway.git",
                    "tag" : "1.2.0"
                }
            ]
        },

        {
            "name" : "libdeflate",
            "builddir" : true,
